<h1>Edit category</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "category_form" %>  
  </div>
  <div class="row col-md-6 col-md-offset-3">
    <table class="table table-bordered">
      <tr>
        <th>ID</th>
        <th>Word</th>
        <th>Action</th>
      </tr>
      <% @words.each do |word| %>
        <tr>
          <td><%= word.id %></td>
          <td><%= word.content %></td>
          <td class="col-md-4">
            <%= link_to t(:link_edit), edit_admin_word_path(word.id), class: "btn btn-primary" %>
            <%= link_to t(:link_delete), admin_word_path(word.id), 
                                         method: :delete, 
                                         data: {confirm: t(:delete_warning)},
                                         class: "btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </table>
    <div class="col-md-offset-3">
      <%= will_paginate @words %>
    </div>
  </div>
</div>
