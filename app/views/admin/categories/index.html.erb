<div class="container">
  <div class="row">
    <h1>Categories</h1>
    <p>
      <%= link_to t(:add_new_category), new_admin_category_path, class: "btn btn-success" %>
    </p>    
    <table class="table table-bordered">
      <tr>
        <th>ID</th>
        <th>Categories name</th>
        <th>Learn process</th>
        <th>Action</th>
      </tr>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.name %></td>
          <td>
            <%= category.words.learned(current_user).count %> /
            <%= category.words.count %> words
          </td>
          <td class="col-md-4" data-no-turbolink='true'>
            <%= link_to t(:link_edit), edit_admin_category_path(category.id), class: "btn btn-primary col-md-3" %>
            <%= link_to t(:link_delete), admin_category_path(category.id), method: :delete, 
                                        data: {confirm: t(:delete_warning)}, 
                                        class: "btn btn-primary col-md-3 col-md-offset-1" %>
            <%= link_to t(:lesson_start), new_category_lesson_path(category.id), class: "btn btn-primary col-md-offset-1 col-md-3" %>
          </td>
        </tr>
      <% end %>      
    </table>
  </div>
</div>
