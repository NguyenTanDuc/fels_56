<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:fels), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to t(:home), root_path %>
        </li>
        <li>
          <%= link_to t(:word_list), words_path %>
        </li>
        <li>
          <%= link_to t(:categories), categories_path %>
        </li>
        <li>
          <%= link_to t(:lesson), lessons_path %>
        </li>
        <li>
          <%= link_to t(:result), root_path %>
        </li>

        <% if logged_in? %>
          <li>
            <%= link_to t(:user_show), root_path %>
          </li>          
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= t(:account) %> <b class="caret"></b> </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t(:profiles), current_user %>
              </li>
              <li>
                <%= link_to t(:settings), '#' %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to t(:log_out), log_out_path, method: "delete" %>
              </li>
            </ul>
          </li>          
        <% else %>
          <li>
            <%= link_to t(:log_in), log_in_path %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
